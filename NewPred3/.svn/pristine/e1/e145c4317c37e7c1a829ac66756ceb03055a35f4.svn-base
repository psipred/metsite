<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>

<div style="background: <%= cycle(bgcolor,'#fff') %>; padding: 4px;">
     <strong>Name: </strong>
  <%= link_to(job.name, { :action => 'status', :id => job.id }) %><br>
  <%  for result in job.request_results.find_all_by_status_class(6) %>
    <strong>Filename:</strong>
    <a href="<%= url_for :controller => "bio_serf",
         :action => "getresultattached",
         :id => result.id %>">
  <%= result.content_name%></a><br>
    <strong>Time:</strong>
    <%= result.created_at%><br>
    <form>
      <script type="text/javascript">
        jmolInitialize("../../", "JmolApplet.jar");
        jmolApplet(480, "load <%= url_for( :controller => "bio_serf",
                                        :action => "getresultattached",
                                        :id => result.id) %>; cpk off; wireframe off; cartoon; color cartoon structure; ");
      </script>
    </form>
  <% end %>
</div>