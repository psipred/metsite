<p>Current Available Reports:</p>
<table>
  <tr>
    <% for column in Report.content_columns %>
      <th><%= link_to column.human_name, { :page => @page, 
        :order_by => "#{column.name} ASC"} %></th>
<% end %>
  </tr>
  
<% for report in @reports %>
    <tr>
    <% for column in Report.content_columns %>
      <td><%=h  report.send(column.name) %></td>
    <% end %>
    <td><%= link_to "Show", { :action => 'show_report', :id => report.id }%> </td>
    <td><%= link_to "Chart", { :action => 'show_report_overview', :id => report.id } %> </td>
  <% end %>
  <%= will_paginate @reports %>
</table>

