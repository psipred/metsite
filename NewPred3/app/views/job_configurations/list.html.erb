<h1>Listing configurations</h1>

<p><table>
  <tr>
  <% for column in JobConfiguration.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for configuration in @configurations %>
  <tr style="background: <%= cycle("#ccc","") %>;">
  <% for column in JobConfiguration.content_columns %>
    <td style="padding: 3px;"><%=h configuration.send(column.name) %></td>
  <% end %>
    <td style="padding: 3px;"><%= link_to 'Show', :action => 'show', :id => configuration %></td>
    <td style="padding: 3px;"><%= link_to 'Edit', :action => 'edit', :id => configuration %></td>
    <td style="padding: 3px;"><%= link_to 'Destroy', { :action => 'destroy', :id => configuration }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
<%= will_paginate @configurations%>
</table>
</p>
<br />

<p><%= link_to 'New configuration', :action => 'new' %> &nbsp;&nbsp;
<%= link_to 'New Server', :action => 'new_server' %></p>
